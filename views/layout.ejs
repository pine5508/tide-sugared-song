  <div class="modal fade" id="addLocation" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1">
  <div class="modal-dialog modal-dialog-scrollable modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Suggest a New Location</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <form class="row g-3" method="post" action="/addLocation">
          <div class="col-10">
            <label for="name" class="form-label">Name this place</label>
            <input type="text" class="form-control" id="name" name="name">
          </div>
          <div class="col-2">
            <label for="reupcycle" class="form-label">Type</label>
            <select id="reupcycle" name="reupcycle" class="form-select">
              <option selected>Recycle</option>
              <option>Upcycle</option>
            </select>
          </div>
          <div class="col-6">
            <label for="address1" class="form-label">Address</label>
            <input type="text" class="form-control" id="address1" name="address1" placeholder="1234 Main St">
          </div>
          <div class="col-6">
            <label for="address2" class="form-label">Address 2</label>
            <input type="text" class="form-control" id="address2" name="address2" placeholder="Apartment, studio, or floor">
          </div>
          <div class="col-6">
            <label for="city" class="form-label">City</label>
            <input type="text" class="form-control" id="city" name="city">
          </div>
          <div class="col-2">
            <label for="state" class="form-label">State</label>
            <select id="state" name="state" class="form-select">
              <option selected>Choose...</option>
              <option>MA</option>
              <option>NY</option>
              <option>NH</option>
            </select>
          </div>
          <div class="col-2">
            <label for="zip" class="form-label">Zip Code</label>
            <input type="text" class="form-control" id="zip" name="zip" placeholder="00000">
          </div>
          <div class="col-12">
            <label for="imgURL" class="form-label">Image URL</label>
            <input type="text" class="form-control" id="imgURL" name="imgURL">
          </div>
          <div class="col-12">
            <label for="imgURL" class="form-label">Website URL</label>
            <input type="text" class="form-control" id="webURL" name="webURL">
          </div>
          <div class="col-12">
            <label for="details" class="form-label">Details</label>
            <textarea class="form-control" id="details" name="details" rows="2" placeholder="Type some details in..."></textarea>
          </div>
          <div class="col-6">
            <label for="phone" class="form-label">Phone Number</label>
            <input type="text" class="form-control" id="phone" name="phone" placeholder="000-1234-5678">
          </div>
          <div class="col-6">
            <label for="hrs" class="form-label">Operation Hours</label>
            <input type="text" class="form-control" id="hrs" name="hrs" placeholder="Mon-Fri, 9am-7pm">
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-success">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  


