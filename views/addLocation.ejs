<h1>
  Suggest a New Location
</h1>


<form class="row g-3" method="post" action="/addLocation">
  <div class="col-10">
    <label for="namePlace" class="form-label">Name this place</label>
    <input type="text" class="form-control" id="namePlace" name="namePlace">
  </div>
  <div class="col-2">
    <label for="reupcycle" class="form-label">Recycle / Upcycle</label>
    <select id="reupcycle" name="reupcycle" class="form-select">
      <option selected>Recycle</option>
      <option>Upcycle</option>
    </select>
  </div>
  <div class="col-6">
    <label for="address1" class="form-label">Address</label>
    <input type="text" class="form-control" id="address1" name="address1" placeholder="1234 Main St">
  </div>
  <div class="col-6">
    <label for="address2" class="form-label">Address 2</label>
    <input type="text" class="form-control" id="address2" name="address2" placeholder="Apartment, studio, or floor">
  </div>
  <div class="col-md-6">
    <label for="city" class="form-label">City</label>
    <input type="text" class="form-control" id="city" name="city">
  </div>
  <div class="col-md-4">
    <label for="state" class="form-label">State</label>
    <select id="state" name="state" class="form-select">
      <option selected>Choose...</option>
      <option>MA</option>
      <option>NY</option>
      <option>NH</option>
    </select>
  </div>
  <div class="col-md-2">
    <label for="zip" class="form-label">Zip</label>
    <input type="text" class="form-control" id="zip" name="zip" placeholder="00000">
  </div>
  <div class="col-12">
    <label for="imageURL" class="form-label">Image URL</label>
    <input type="text" class="form-control" id="imageURL" name="imageURL">
  </div>
  
  <div class="col-12">
    <button type="submit" class="btn btn-success">Submit</button>
  </div>
</form>

<hr>

<ul>
  

<!-- here is how we iterate over all locations in the database! -->

    
  <div class="overflow-hidden">
  <div class="row gy-4">
    
  <% locations.forEach(location => { %> 

    <div class="col-4">
      <div class="card">
        <img src="https://www.watertowndpw.org/ImageRepository/Document?documentID=279" class="card-img-top" alt="image...">
        <div class="card-body">
          <h4 class="card-title"> <%= location.namePlace %> </h4>
          <p class="card-text">
            <i> </i>
            <%= location.reupcycle %>
            At the Recycle Center, you can recycle clothes or any type of textile.
          </p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Address:  <%= location.city %></li>
          <li class="list-group-item">Phone Number: 617-972-6420</li>
          <li class="list-group-item">Hours: Friday and Saturday 9am-4pm</li>
          <li class="list-group-item">CreatedAt: <%= location.createdAt %></li>
        </ul>
        <div class="card-body">
          <a href="https://www.watertowndpw.org/169/Trash-Recycling" class="btn btn-success">Visit Website</a>
        </div>
      </div>
    </div>
    
  
  <% }) %>
    
    </div>
  </div>
  
</ul>

